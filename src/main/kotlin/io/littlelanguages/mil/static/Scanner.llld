tokens
    Symbol = (id \ '-') {digit | id};
    LiteralInt = ['-'] digits;
    LiteralString = '"' {!('"' + cr) | "\" ('"' + '\' + 't' + 'n' + 'r' | "\x" hexDigits)} '"';

comments
   ";" {!cr};

whitespace
  chr(0)-' ';

fragments
  digit = '0'-'9';
  digits = digit {digit};
  hexDigit = digit + 'a'-'f' + 'A'-'F';
  hexDigits = hexDigit {hexDigit};
  alpha = 'a'-'z' + 'A'-'Z';
  id = '!'-'}' \ ('0'-'9' + '"' + '(' + ')' + ';' + '#');
  cr = chr(10);